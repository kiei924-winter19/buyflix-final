<h1>Create a new movie</h1>

<%= bootstrap_form_for(Movie.new) do |f| %>
  <%= f.text_field :title %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.text_area :summary %>
  <%= f.text_field :year_released %>
  <%= f.text_field :poster %>
  <%= f.submit "Create Movie" %>
<% end %>